<AnchorPane xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.MeskenKayitController">

    <!-- Top Section with Logo and Menu -->
    <VBox spacing="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="14.0">
        <!-- Logo Placeholder -->
        <ImageView fx:id="logoImageView">
            <!-- Add the image source later -->
        </ImageView>

        
     <!-- Menu Bar -->
     <MenuBar layoutX="299.0" layoutY="29.0">
         <Menu text="Islemler">
             <MenuItem text="Islem 1" />
             <MenuItem text="Islem 2" />
             <MenuItem text="Islem 3" />
         </Menu>
         
            <!-- Additional Menus -->
         <Menu text="Borclandirma ">
             <MenuItem text="Borclandirma 1" />
             <MenuItem text="Borclandirma 2" />
             <MenuItem text="Borclandirma 3" />
         </Menu>
         <Menu text="Tahsilat">
             <MenuItem text="Tahsilat 1" />
             <MenuItem text="Tahsilat 2" />
             <MenuItem text="Tahsilat 3" />
         </Menu>
         <Menu text="Icra">
             <MenuItem text="Icra 1" />
             <MenuItem text="Icra 2" />
             <MenuItem text="Icra 3" />
         </Menu>
         <Menu text="Banka">
             <MenuItem text="Banka Raporu 1" />
             <MenuItem text="Banka Raporu 2" />
         </Menu>
         <Menu text="Raporlar">
             <MenuItem text="Banka Raporlari" />
             <MenuItem text="Icra Raporlari" />
             <MenuItem text="Diğer Raporlar" />
         </Menu>
         <Menu text="Devir">
             <MenuItem text="Devir 1" />
             <MenuItem text="Devir 2" />
         </Menu>
         <Menu text="Parametreler">
             <MenuItem text="Parametre 1" />
             <MenuItem text="Parametre 2" />
         </Menu>
         <Menu text="Yardim">
             <MenuItem text="Yardim 1" />
             <MenuItem text="Yardim 2" />
         </Menu>
         <Menu text="Diger">
             <MenuItem text="Islem 1" />
             <MenuItem text="Islem 2" />
         </Menu>
     </MenuBar>
    </VBox>

    <!-- Main Title -->
    <Label style="-fx-font-size: 24px; -fx-font-weight: bold;" text="Mesken Kayıt" AnchorPane.leftAnchor="20.0" AnchorPane.topAnchor="70.0" />

    <!-- Main container for the content -->
    <VBox spacing="20.0" AnchorPane.bottomAnchor="5.0" AnchorPane.leftAnchor="5.0" AnchorPane.rightAnchor="5.0" AnchorPane.topAnchor="120.0">

        <!-- GridPane for Entry Fields -->
        <GridPane hgap="10.0" vgap="10.0">
            <!-- Row 1 -->
            <Label text="Mesken No:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
            <TextField fx:id="meskenNoField" promptText="Enter Mesken No" GridPane.columnIndex="1" GridPane.rowIndex="0" />

            <Label text="Adi:" GridPane.columnIndex="2" GridPane.rowIndex="0" />
            <TextField fx:id="adiField" promptText="Enter Adi" GridPane.columnIndex="3" GridPane.rowIndex="0" />

            <Label text="Soyadi:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
            <TextField fx:id="soyadiField" promptText="Enter Soyadi" GridPane.columnIndex="1" GridPane.rowIndex="1" />

            <Label text="Esinin Adi:" GridPane.columnIndex="2" GridPane.rowIndex="1" />
            <TextField fx:id="esininAdiField" promptText="Enter Esinin Adi" GridPane.columnIndex="3" GridPane.rowIndex="1" />

            <!-- Row 2 -->
            <Label text="TC Kimlik No:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
            <TextField fx:id="tcKimlikNoField" promptText="Enter TC Kimlik No" GridPane.columnIndex="1" GridPane.rowIndex="2" />

            <Label text="Vergi Dairesi:" GridPane.columnIndex="2" GridPane.rowIndex="2" />
            <TextField fx:id="vergiDairesiField" promptText="Enter Vergi Dairesi" GridPane.columnIndex="3" GridPane.rowIndex="2" />

            <Label text="Vergi No:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
            <TextField fx:id="vergiNoField" promptText="Enter Vergi No" GridPane.columnIndex="1" GridPane.rowIndex="3" />

            <Label text="Kan Grubu:" GridPane.columnIndex="2" GridPane.rowIndex="3" />
            <TextField fx:id="kanGrubuField" promptText="Enter Kan Grubu" GridPane.columnIndex="3" GridPane.rowIndex="3" />

            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" />
                <ColumnConstraints hgrow="SOMETIMES" />
                <ColumnConstraints hgrow="SOMETIMES" />
                <ColumnConstraints hgrow="SOMETIMES" />
            </columnConstraints>
            
            <rowConstraints>
                <RowConstraints vgrow="SOMETIMES" />
                <RowConstraints vgrow="SOMETIMES" />
                <RowConstraints vgrow="SOMETIMES" />
                <RowConstraints vgrow="SOMETIMES" />
            </rowConstraints>
        </GridPane>

        <!-- Separator for Address Information -->
        <Separator orientation="HORIZONTAL" />

        <!-- Address Information Section -->
        <GridPane hgap="10.0" vgap="10.0">
            <Label text="Address:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
            <TextField fx:id="addressField" promptText="Enter Address" GridPane.columnIndex="1" GridPane.columnSpan="3" GridPane.rowIndex="0" />

            <Label text="City:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
            <TextField fx:id="cityField" promptText="Enter City" GridPane.columnIndex="1" GridPane.rowIndex="1" />

            <Label text="State:" GridPane.columnIndex="2" GridPane.rowIndex="1" />
            <TextField fx:id="stateField" promptText="Enter State" GridPane.columnIndex="3" GridPane.rowIndex="1" />

            <Label text="E-posta:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
            <TextField fx:id="emailField" promptText="Enter E-posta" GridPane.columnIndex="1" GridPane.rowIndex="2" />

            <Label text="GSM:" GridPane.columnIndex="2" GridPane.rowIndex="2" />
            <TextField fx:id="gsmField" promptText="Enter GSM" GridPane.columnIndex="3" GridPane.rowIndex="2" />

            <Label text="Posta Kodu:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
            <TextField fx:id="postaKoduField" promptText="Enter Posta Kodu" GridPane.columnIndex="1" GridPane.rowIndex="3" />

            <Label text="Giris Tarihi:" GridPane.columnIndex="2" GridPane.rowIndex="3" />
            <TextField fx:id="girisTarihiField" promptText="Enter Giris Tarihi" GridPane.columnIndex="3" GridPane.rowIndex="3" />

            <Label text="Cikis Tarihi:" GridPane.columnIndex="0" GridPane.rowIndex="4" />
            <TextField fx:id="cikisTarihiField" promptText="Enter Cikis Tarihi" GridPane.columnIndex="1" GridPane.rowIndex="4" />

            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" />
                <ColumnConstraints hgrow="SOMETIMES" />
                <ColumnConstraints hgrow="SOMETIMES" />
                <ColumnConstraints hgrow="SOMETIMES" />
            </columnConstraints>
            
            <rowConstraints>
                <RowConstraints vgrow="SOMETIMES" />
                <RowConstraints vgrow="SOMETIMES" />
                <RowConstraints vgrow="SOMETIMES" />
                <RowConstraints vgrow="SOMETIMES" />
            </rowConstraints>
        </GridPane>

        <!-- Buttons Section -->
        <HBox alignment="CENTER_LEFT" spacing="10.0">
            <Button fx:id="button1" text="Yeni">
            <font>
               <Font size="18.0" />
            </font></Button>
            <Button fx:id="button2" text="Sil">
            <font>
               <Font size="18.0" />
            </font></Button>
            <Button fx:id="button3" text="Kaydet">
            <font>
               <Font size="18.0" />
            </font></Button>
            <Button fx:id="button4" text="Ara">
            <font>
               <Font size="18.0" />
            </font></Button>
            <Button fx:id="button5" text="Haraketler">
            <font>
               <Font size="18.0" />
            </font></Button>
            <Button fx:id="button6" text="Ekstre Al">
            <font>
               <Font size="18.0" />
            </font></Button>
        </HBox>

    </VBox>
</AnchorPane>
